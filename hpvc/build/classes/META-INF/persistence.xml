<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="hpvc">
		<class>br.com.hpvc.entidade.Area</class>
		<class>br.com.hpvc.entidade.Categoria</class>
		<class>br.com.hpvc.entidade.Chamado</class>
		<class>br.com.hpvc.entidade.Local</class>
		<class>br.com.hpvc.entidade.Localidade</class>
		<class>br.com.hpvc.entidade.Site</class>
		<class>br.com.hpvc.entidade.StatusChamado</class>
		<class>br.com.hpvc.entidade.SubCategoria</class>
		<class>br.com.hpvc.entidade.TipoUsuario</class>
		<class>br.com.hpvc.entidade.Usuario</class>
		
		<properties>
			<property name="toplink.logging.level" value="OFF"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>  <!-- update to match database-->
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/hpvc"/>
			<property name="toplink.jdbc.password" value="root"/>
            <property name="toplink.jdbc.user" value="root"/>
        </properties>
		
		
	</persistence-unit>
</persistence>
